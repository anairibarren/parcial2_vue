  emit('add-favorite', { message: 'Ya está en favoritos', type: 'error' })\n  }\n}\n</script>\n\n<style scoped>\n.movie-detail {\n  display: flex;\n  gap: 2rem;\n  padding: 1rem;\n}\n\n.movie-detail-content {\n  max-width: 600px;\n}\n\n.buttons {\n  margin-top: 1rem;\n}\n\n.btn-favorite {\n  background-color: #007bff;\n  color: white;\n  border: none;\n  padding: 0.5rem 1rem;\n  margin-right: 1rem;\n  cursor: pointer;\n  border-radius: 4px;\n}\n\n.btn-favorite:hover {\n  background-color: #0056b3;\n}\n\n.btn-favorite-added {\n  background-color: #28a745;\n  color: white;\n  border: none;\n  padding: 0.5rem 1rem;\n  margin-right: 1rem;\n  border-radius: 4px;\n  cursor: default;\n}\n\nbutton {\n  font-size: 1rem;\n}\n</style>\n"],"mappings":"AA2BA,SAASA,SAAS,EAAEC,GAAG,EAAEC,QAAQ,QAAQ,KAAI;AAC7C,SAASC,QAAQ,QAAQ,YAAW;;;;;;;;;IAEpC,MAAMC,IAAI,GAAGC,MAAA;IACb,MAAMC,KAAK,GAAGH,QAAQ,CAAC;IACvB,MAAMI,KAAK,GAAGN,GAAG,CAAC,CAAC,CAAC;IAEpBD,SAAS,CAAC,YAAY;MACpB,MAAMQ,EAAE,GAAGF,KAAK,CAACG,MAAM,CAACD,EAAC;MACzB,MAAME,QAAQ,GAAG,MAAMC,KAAK,CAAC,sCAAsCH,EAAE,uDAAuD;MAC5HD,KAAK,CAACK,KAAK,GAAG,MAAMF,QAAQ,CAACG,IAAI,CAAC;IACpC,CAAC;;IAED;IACA,MAAMC,UAAU,GAAGZ,QAAQ,CAAC,MAAM;MAChC,MAAMa,MAAM,GAAGC,IAAI,CAACC,KAAK,CAACC,YAAY,CAACC,OAAO,CAAC,WAAW,CAAC,IAAI,IAAI;MACnE,OAAOJ,MAAM,CAACK,IAAI,CAACC,CAAC,IAAIA,CAAC,CAACb,EAAE,KAAKD,KAAK,CAACK,KAAK,CAACJ,EAAE;IACjD,CAAC;IAED,MAAMc,cAAc,GAAGA,CAAA,KAAM;MAC3B,MAAMP,MAAM,GAAGC,IAAI,CAACC,KAAK,CAACC,YAAY,CAACC,OAAO,CAAC,WAAW,CAAC,IAAI,IAAI;MACnE,IAAI,CAACJ,MAAM,CAACQ,IAAI,CAACF,CAAC,IAAIA,CAAC,CAACb,EAAE,KAAKD,KAAK,CAACK,KAAK,CAACJ,EAAE,CAAC,EAAE;QAC9CO,MAAM,CAACS,IAAI,CAACjB,KAAK,CAACK,KAAK;QACvBM,YAAY,CAACO,OAAO,CAAC,WAAW,EAAET,IAAI,CAACU,SAAS,CAACX,MAAM,CAAC;QACxDX,IAAI,CAAC,cAAc,EAAE;UAAEuB,OAAO,EAAE,+BAA+B;UAAEC,IAAI,EAAE;QAAU,CAAC;MACpF,CAAC,MAAM;QACLxB,IAAI,CAAC,cAAc,EAAE;UAAEuB,OAAO,EAAE,sBAAsB;UAAEC,IAAI,EAAE;QAAQ,CAAC;MACzE;IACF","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}