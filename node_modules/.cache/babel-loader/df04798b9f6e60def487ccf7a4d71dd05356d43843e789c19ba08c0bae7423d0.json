{"ast":null,"code":"import { onMounted, ref, computed } from 'vue';\nimport { useRoute } from 'vue-router';\nexport default {\n  __name: 'MovieDetail',\n  setup(__props, {\n    expose: __expose\n  }) {\n    __expose();\n    const route = useRoute();\n    const movie = ref({});\n    onMounted(async () => {\n      const id = route.params.id;\n      const response = await fetch(`https://api.themoviedb.org/3/movie/${id}?api_key=9c9d0afa2300c644bc0efbf0f1e3701a&language=es`);\n      movie.value = await response.json();\n    });\n    const isFavorite = computed(() => {\n      const stored = JSON.parse(localStorage.getItem('favorites') || '[]');\n      return stored.some(m => m.id === movie.value.id);\n    });\n    const addToFavorites = () => {\n      const stored = JSON.parse(localStorage.getItem('favorites') || '[]');\n      if (!stored.find(m => m.id === movie.value.id)) {\n        stored.push(movie.value);\n        localStorage.setItem('favorites', JSON.stringify(stored));\n        alert('Película agregada a favoritos');\n      } else {\n        alert('La película ya está en favoritos');\n      }\n    };\n    const __returned__ = {\n      route,\n      movie,\n      isFavorite,\n      addToFavorites,\n      onMounted,\n      ref,\n      computed,\n      get useRoute() {\n        return useRoute;\n      }\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["onMounted","ref","computed","useRoute","route","movie","id","params","response","fetch","value","json","isFavorite","stored","JSON","parse","localStorage","getItem","some","m","addToFavorites","find","push","setItem","stringify","alert"],"sources":["C:/Users/anade/OneDrive/Escritorio/vue-movie-app/src/views/MovieDetail.vue"],"sourcesContent":["<template>\n  <div class=\"movie-detail\">\n    <img :src=\"'https://image.tmdb.org/t/p/w500' + movie.poster_path\" :alt=\"movie.title\" />\n\n    <div class=\"movie-detail-content\">\n      <h2>{{ movie.title }}</h2>\n      <p><strong>Año:</strong> {{ movie.release_date?.substring(0, 4) || 'Desconocido' }}</p>\n      <p>{{ movie.overview }}</p>\n\n      <div class=\"buttons\">\n        <button \n          v-if=\"!isFavorite\" \n          @click=\"addToFavorites\"\n          class=\"btn-favorite\"\n        >\n          ☆ Agregar a favoritos\n        </button>\n        <button v-else disabled class=\"btn-favorite-added\">\n          ★ Ya fue añadido\n        </button>\n\n        <!-- Este botón ahora navega usando router-link -->\n        <router-link to=\"/\">\n          <button class=\"btn-back\">← Volver al inicio</button>\n        </router-link>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script setup>\nimport { onMounted, ref, computed } from 'vue'\nimport { useRoute } from 'vue-router'\n\nconst route = useRoute()\nconst movie = ref({})\n\nonMounted(async () => {\n  const id = route.params.id\n  const response = await fetch(`https://api.themoviedb.org/3/movie/${id}?api_key=9c9d0afa2300c644bc0efbf0f1e3701a&language=es`)\n  movie.value = await response.json()\n})\n\nconst isFavorite = computed(() => {\n  const stored = JSON.parse(localStorage.getItem('favorites') || '[]')\n  return stored.some(m => m.id === movie.value.id)\n})\n\nconst addToFavorites = () => {\n  const stored = JSON.parse(localStorage.getItem('favorites') || '[]')\n  if (!stored.find(m => m.id === movie.value.id)) {\n    stored.push(movie.value)\n    localStorage.setItem('favorites', JSON.stringify(stored))\n    alert('Película agregada a favoritos')\n  } else {\n    alert('La película ya está en favoritos')\n  }\n}\n</script>\n\n<style scoped>\n.movie-detail {\n  display: flex;\n  gap: 2rem;\n  padding: 1rem;\n}\n\n.movie-detail-content {\n  max-width: 600px;\n}\n\n.buttons {\n  margin-top: 1rem;\n}\n\n.btn-favorite {\n  background-color: #007bff;\n  color: white;\n  border: none;\n  padding: 0.5rem 1rem;\n  margin-right: 1rem;\n  cursor: pointer;\n  border-radius: 4px;\n}\n\n.btn-favorite:hover {\n  background-color: #0056b3;\n}\n\n.btn-favorite-added {\n  background-color: #28a745;\n  color: white;\n  border: none;\n  padding: 0.5rem 1rem;\n  margin-right: 1rem;\n  border-radius: 4px;\n}\n\n.btn-back {\n  background-color: #6c757d;\n  color: white;\n  padding: 0.5rem 1rem;\n  border: none;\n  border-radius: 4px;\n}\n</style>\n"],"mappings":"AA+BA,SAASA,SAAS,EAAEC,GAAG,EAAEC,QAAQ,QAAQ,KAAI;AAC7C,SAASC,QAAQ,QAAQ,YAAW;;;;;;;IAEpC,MAAMC,KAAK,GAAGD,QAAQ,CAAC;IACvB,MAAME,KAAK,GAAGJ,GAAG,CAAC,CAAC,CAAC;IAEpBD,SAAS,CAAC,YAAY;MACpB,MAAMM,EAAE,GAAGF,KAAK,CAACG,MAAM,CAACD,EAAC;MACzB,MAAME,QAAQ,GAAG,MAAMC,KAAK,CAAC,sCAAsCH,EAAE,uDAAuD;MAC5HD,KAAK,CAACK,KAAK,GAAG,MAAMF,QAAQ,CAACG,IAAI,CAAC;IACpC,CAAC;IAED,MAAMC,UAAU,GAAGV,QAAQ,CAAC,MAAM;MAChC,MAAMW,MAAM,GAAGC,IAAI,CAACC,KAAK,CAACC,YAAY,CAACC,OAAO,CAAC,WAAW,CAAC,IAAI,IAAI;MACnE,OAAOJ,MAAM,CAACK,IAAI,CAACC,CAAC,IAAIA,CAAC,CAACb,EAAE,KAAKD,KAAK,CAACK,KAAK,CAACJ,EAAE;IACjD,CAAC;IAED,MAAMc,cAAc,GAAGA,CAAA,KAAM;MAC3B,MAAMP,MAAM,GAAGC,IAAI,CAACC,KAAK,CAACC,YAAY,CAACC,OAAO,CAAC,WAAW,CAAC,IAAI,IAAI;MACnE,IAAI,CAACJ,MAAM,CAACQ,IAAI,CAACF,CAAC,IAAIA,CAAC,CAACb,EAAE,KAAKD,KAAK,CAACK,KAAK,CAACJ,EAAE,CAAC,EAAE;QAC9CO,MAAM,CAACS,IAAI,CAACjB,KAAK,CAACK,KAAK;QACvBM,YAAY,CAACO,OAAO,CAAC,WAAW,EAAET,IAAI,CAACU,SAAS,CAACX,MAAM,CAAC;QACxDY,KAAK,CAAC,+BAA+B;MACvC,CAAC,MAAM;QACLA,KAAK,CAAC,kCAAkC;MAC1C;IACF","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}