{"ast":null,"code":"import { onMounted, ref, computed } from 'vue';\nimport { useRoute } from 'vue-router';\nexport default {\n  __name: 'MovieDetail',\n  emits: ['add-favorite', 'close'],\n  setup(__props, {\n    expose: __expose,\n    emit: __emit\n  }) {\n    __expose();\n    const emit = __emit;\n    const route = useRoute();\n    const movie = ref({});\n    onMounted(async () => {\n      const id = route.params.id;\n      const response = await fetch(`https://api.themoviedb.org/3/movie/${id}?api_key=9c9d0afa2300c644bc0efbf0f1e3701a&language=es`);\n      movie.value = await response.json();\n    });\n\n    // Computed para saber si la película ya está en favoritos\n    const isFavorite = computed(() => {\n      const stored = JSON.parse(localStorage.getItem('favorites') || '[]');\n      return stored.some(m => m.id === movie.value.id);\n    });\n    const addToFavorites = () => {\n      const stored = JSON.parse(localStorage.getItem('favorites') || '[]');\n      if (!stored.find(m => m.id === movie.value.id)) {\n        stored.push(movie.value);\n        localStorage.setItem('favorites', JSON.stringify(stored));\n        emit('add-favorite', {\n          message: 'Película agregada a favoritos',\n          type: 'success'\n        });\n      } else {\n        emit('add-favorite', {\n          message: 'Ya está en favoritos',\n          type: 'error'\n        });\n      }\n    };\n    const __returned__ = {\n      emit,\n      route,\n      movie,\n      isFavorite,\n      addToFavorites,\n      onMounted,\n      ref,\n      computed,\n      get useRoute() {\n        return useRoute;\n      }\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["onMounted","ref","computed","useRoute","emit","__emit","route","movie","id","params","response","fetch","value","json","isFavorite","stored","JSON","parse","localStorage","getItem","some",